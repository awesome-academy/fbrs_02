<div class="row">
  <div class="col-xs-12 col-sm-8 col-md-8 col-lg-9 pull-right">
    <h2><%= t ("admin.static_pages.index.category") %></h2>
    <div class="panel panel-default">
      <div class="panel-body">
        <div class="table-responsive">
          <div class="row">
            <%= render "search_categories" %>
            <div class="col-sm-6">
              <a href="/admin/categories/new" class="btn btn-success btn-md"><%= t ".add_category" %></a>
            </div>
          </div>
          <table class="table table-striped table-bordered table-hover" id="dataTables-example">
            <thead>
              <tr>
                <th><%= t ".id" %></th>
                <th><%= t ".category" %></th>
                <th class="action"><%= t ".action" %></th>
              </tr>
            </thead>
            <tbody>
              <%= render partial: "category", collection: load_categories, as: :category %>
            </tbody>
          </table>
          <%= will_paginate %>
        </div>
      </div>
    </div>
  </div>
</div>
