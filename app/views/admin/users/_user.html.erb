<tr class=" gradeX">
  <td id="catId"><%= user.id %></td>
  <td><%= user.name %></td>
  <td><%= user.email %></td>
  <td class="center">
    <% if current_user.admin? && !current_user?(user) %>
      <%= link_to t("view.users.user.delete"), admin_user_path(user), method: :delete,
        data: { confirm: t("view.users.user.sure") },class: "fa fa-trash btn btn-danger " %>
    <% if current_user.admin? && user.user? %>
      <%= link_to t("view.users.user.setadmin"), admin_user_path(user), method: :patch, class: "fa fa-check btn btn-success " %>
    <% elsif current_user.admin? && user.admin? %>
      <%= link_to t("view.users.user.setuser"), admin_user_path(user), method: :patch ,class: "fa fa-user btn btn-success " %>
    <% end %>
    <% end %>
  </td>
</tr>
