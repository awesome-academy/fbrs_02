<div class="row">
  <div class="col-xs-12 col-sm-8 col-md-8 col-lg-9 pull-right">
    <h2><%= t "view.suggests.index.suggest" %></h2>
    <div class="panel panel-default">
      <div class="panel-body">
        <div class="table-responsive">
        <div class="row"></div>
        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
          <thead>
            <tr>
              <th><%= t "view.suggests.index.id" %></th>
              <th class="name"><%= t "view.suggests.index.title" %></th>
              <th><%= t "view.suggests.index.category" %></th>
              <th><%= t "view.suggests.index.username" %></th>
              <th class="action"><%= t "view.suggests.index.status" %></th>
              <th class="action"><%= t "view.suggests.index.action" %></th>
            </tr>
          </thead>
          <tbody>
            <%= render @suggests %>
          </tbody>
        </table>
          <%= will_paginate @suggests %>
        </div>
      </div>
    </div>
  </div>
</div>
