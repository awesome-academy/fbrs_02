<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <% if @user.image %>
          <%= image_tag(@user.image)%>
        <% else %>
          <%= image_tag @user.picture.url if @user.picture? %>
        <% end %>
        <%= @user.name %>
      </h1>
    </section>
    <section class="stats">
      <%= render "shared/stats" %>
    </section>
  </aside>
    <%= render "follow_form" if user_signed_in? %>
</div>
