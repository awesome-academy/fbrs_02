<% if like? @book %>
  <%= link_to t("view.likes.unlike"), unlike_path(book_id: @book), method: :delete, remote: true, class: "btn btn-danger", id: "likes" %>
<% else%>
  <%= link_to t("view.likes.like"), like_path(book_id: @book), method: :post, remote: true, class: "btn btn-success", id: "likes" %>
<% end %>
